<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout
    android:id="@+id/coordinatorLayout"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".LightsActivity">

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent" android:layout_height="match_parent"
        android:background="@drawable/app_background_opacity">

        <ImageButton
            app:srcCompat="@drawable/light_image"
            android:id="@+id/imageButton"
            android:layout_width="400px"
            android:layout_height="400px"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true" />

        <ImageButton
            app:srcCompat="@drawable/light_image"
            android:id="@+id/imageButton6"
            android:layout_width="400px"
            android:layout_height="400px"
            android:layout_alignTop="@+id/imageButton3"
            android:layout_alignParentEnd="true" />

        <ImageButton
            app:srcCompat="@drawable/light_image"
            android:id="@+id/imageButton5"
            android:layout_width="400px"
            android:layout_height="400px"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true" />

        <ImageButton
            app:srcCompat="@drawable/light_image"
            android:id="@+id/imageButton4"
            android:layout_width="400px"
            android:layout_height="400px"
            android:layout_alignTop="@+id/imageButton2"
            android:layout_alignParentEnd="true" />

        <ImageButton
            app:srcCompat="@drawable/light_image"
            android:id="@+id/imageButton3"
            android:layout_width="400px"
            android:layout_height="400px"
            android:layout_below="@+id/textView2"
            android:layout_alignParentStart="true"
            android:layout_marginTop="14dp" />

        <TextView
            android:text="Kitchen"
            android:id="@+id/textView3"
            android:textStyle="normal|bold"
            android:textColor="@android:color/black"
            android:textSize="18sp"
            android:layout_height="100px"
            android:layout_width="200px"
            android:layout_below="@+id/imageButton"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="32dp" />

        <TextView
            android:text="Hall"
            android:id="@+id/textView2"
            android:layout_width="100px"
            android:textStyle="normal|bold"
            android:textColor="@android:color/black"
            android:textSize="18sp"
            android:layout_height="100px"
            android:layout_marginStart="19dp"
            android:layout_below="@+id/imageButton5"
            android:layout_alignStart="@+id/textView7" />

        <TextView
            android:text="Bedroom2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView8"
            android:textSize="18sp"
            android:textStyle="normal|bold"
            android:textColor="@android:color/black"
            android:layout_below="@+id/imageButton6"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="23dp" />

        <TextView
            android:text="Bedroom1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView7"
            android:textSize="18sp"
            android:textColor="@android:color/background_dark"
            android:textStyle="normal|bold"
            android:layout_marginStart="28dp"
            android:layout_below="@+id/imageButton3"
            android:layout_alignParentStart="true" />

        <ImageButton
            app:srcCompat="@drawable/light_image"
            android:id="@+id/imageButton2"
            android:layout_width="400px"
            android:layout_height="400px"
            android:layout_marginTop="20dp"
            android:layout_below="@+id/textView7"
            android:layout_alignParentStart="true" />

        <TextView
            android:text="Garage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/imageButton2"
            android:layout_alignStart="@+id/textView7"
            android:layout_marginStart="7dp"
            android:id="@+id/textView9"
            android:textSize="18sp"
            android:textStyle="normal|bold"
            android:textColor="@android:color/black" />

        <TextView
            android:text="Garden"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/imageButton4"
            android:layout_alignEnd="@+id/textView3"
            android:id="@+id/textView11"
            android:textSize="18sp"
            android:textColor="@android:color/background_dark"
            android:textStyle="normal|bold" />

    </RelativeLayout>
</android.support.design.widget.CoordinatorLayout>